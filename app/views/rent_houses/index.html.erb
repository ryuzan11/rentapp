<%= render partial: "share/header" %>
<h1>家賃情報index</h1><br>
<%= link_to '登録', new_rent_house_path %>
<% if user_signed_in? %>
  <table>
    <thead>
      <tr>
        <th>登録者</th>
        <th>建物名</th>
        <th>家賃</th>
        <th>都道府県</th>
        <th>市区町村</th>
  <!--           <th>路線</th> -->
        <th>最寄駅</th>
      </tr>
    </thead>
    <tbody>
        <% @renthouses.each do |renthouses| %>
          <tr>
            <%= render partial: "rent_houses/renthouses", locals: { renthouses: renthouses } %>
            <% if user_signed_in? && current_user.id == renthouses.user_id %>
              <td><%= link_to '　編集', edit_rent_house_path(renthouses) %></td>
              <td><button data-modal="delete-item" data-open="modal" >　削除</button></td>
                <%= render "rent_houses/confirmation_modal", renthouse: renthouses %>
            <% end %>
          </tr>
        <% end %>
    </tbody>
  </table>

<% else %>

  <table>
    <thead>
      <tr>
        <th>登録者</th>
        <th>建物名</th>
        <th>家賃</th>
        <th>都道府県</th>
        <th>市区町村</th>
  <!--           <th>路線</th> -->
        <th>最寄駅</th>
      </tr>
    </thead>
    <tbody>
        <% @renthouses.first(4).each do |renthouses| %>
          <tr>
            <%= render partial: "rent_houses/renthouses", locals: { renthouses: renthouses } %>
          </tr>
        <% end %>
    </tbody>
  </table>

  <p align='center'>--------------------------------------------</p>
  <p align='center'>さらに物件情報を見たい場合は<%= link_to "ログイン", login_path %>してください</p>

  <% end %>
