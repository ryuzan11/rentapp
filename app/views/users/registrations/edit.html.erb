<div class="card devise">
  <div class="square">
    <h2>ユーザー情報編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :ニックネーム %><br />
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :Eメール %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :性別 %><br />
        <%= f.collection_select :gender_id, Gender.find(1,2,9), :id, :gender %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :パスワード %>
          <% if @minimum_password_length %>
            <em>( <%= @minimum_password_length %> 文字以上 /</em>
          <% end %>
          <i>パスワードを変更しない場合は空欄 )</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :現在のパスワード %><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "変更", class: 'btn btn-primary' %>
        <input type="button" id="return" value="もどる" onclick="history.back()", class="btn btn-primary">
      </div>

      <div class="form-group">
        <%= link_to "ホーム画面へ", root_path, class: "btn btn-info" %>
        <%= link_to "ログアウト", destroy_user_session_path, class:"btn btn-info" , method: :delete  %>
      </div>

    <% end %>

  </div>
</div>